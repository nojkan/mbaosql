# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /api/v1/stores/:storeid     controllers.StoreController.getStoreById(storeid: String)
POST    /api/v1/stores				controllers.StoreController.postStore
DELETE  /api/v1/stores/:storeid     controllers.StoreController.deleteStoreById(storeid: String)
PUT 	/api/v1/stores/:storeid     controllers.StoreController.updateStoreById(storeid: String)

GET     /api/v1/products/:productid     controllers.ProductController.getProductById(productid: String)
POST    /api/v1/products				controllers.ProductController.postProduct
DELETE  /api/v1/products/:productid     controllers.ProductController.deleteProductById(productid: String)
PUT 	/api/v1/products/:productid     controllers.ProductController.updateProductById(productid: String)

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
